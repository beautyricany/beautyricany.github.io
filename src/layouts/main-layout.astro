<style is:global>
	/* ===================================
   Custom Font - Dear Joe 4
   =================================== */
@font-face {
    font-family: 'Dear Joe 4';
    src: url('/fonts/dear_joe_four/dJ4TRIAL.woff2') format('woff2'),
         url('/fonts/dear_joe_four/dJ4TRIAL.woff') format('woff'),
         url('/fonts/dear_joe_four/dJ4TRIAL.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

/* ===================================
   CSS Variables - Color Theme
   =================================== */
:root {
    --color-primary: #C41E3A;      /* Red */
    --color-secondary: #000000;     /* Black */
    --color-accent: #FFFFFF;        /* White */
    --color-bg-light: #F5F5F5;      /* Light gray background */
    --color-text-dark: #1A1A1A;     /* Almost black for text */
    --color-text-light: #666666;    /* Gray for secondary text */
    --color-border: #E0E0E0;        /* Light border */
    --color-hover: #A01828;         /* Darker red for hover */
    
    --font-primary: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    --font-heading: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    
    --max-width-content: 1400px;    /* Maximum content width */
    --transition-speed: 0.3s;
    --border-radius: 8px;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --box-shadow-hover: 0 8px 15px rgba(0, 0, 0, 0.15);
}

/* ===================================
   Reset & Base Styles
   =================================== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: var(--font-primary);
    color: var(--color-text-dark);
    line-height: 1.6;
    background-color: var(--color-accent);
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a {
    text-decoration: none;
    color: inherit;
    transition: color var(--transition-speed);
}

ul {
    list-style: none;
}

/* ===================================
   Typography
   =================================== */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
}

h1 {
    font-size: 3rem;
}

h2 {
    font-size: 2.5rem;
}

h3 {
    font-size: 1.75rem;
}

h4 {
    font-size: 1.5rem;
}

h5 {
    font-size: 1.25rem;
}

p {
    margin-bottom: 1rem;
}

/* Content area typography - excludes heroes */
main h1, 
main h2, 
main h3, 
main h4, 
main h5, 
main h6,
section:not([class*="hero"]) h1,
section:not([class*="hero"]) h2,
section:not([class*="hero"]) h3,
section:not([class*="hero"]) h4,
section:not([class*="hero"]) h5,
section:not([class*="hero"]) h6 {
    font-weight: 600;
    color: var(--color-secondary);
}

main h2,
section:not([class*="hero"]) h2 {
    font-weight: 700;
}

main p,
section:not([class*="hero"]) p {
    line-height: 1.8;
    color: var(--color-text-dark);
}

p.lead {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-dark);
}

/* ===================================
   Description Block Styles (Shared)
   =================================== */
.description-block h2 {
    color: var(--color-secondary);
    font-size: 2rem;
    font-weight: 600;
}

.description-block h3 {
    color: var(--color-secondary);
    font-size: 1.75rem;
    font-weight: 600;
}

.description-block h4 {
    color: var(--color-secondary);
    font-size: 1.5rem;
    font-weight: 600;
}

.description-block h5 {
    color: var(--color-secondary);
    font-size: 1.25rem;
    font-weight: 600;
}

.description-block p,
.service-group-description,
.description-muted {
    color: var(--color-text-light);
    line-height: 1.6;
    font-size: 1.1rem;
}

.description-muted {
    opacity: 0.80;
}

/* ===================================
   Image Wrapper Styles (Shared)
   =================================== */
.image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, var(--color-bg-light) 0%, #E0E0E0 100%);
}

.image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.image-wrapper:hover img {
    transform: scale(1.05);
}

/* ===================================
   Collapse Toggle Button (Shared)
   =================================== */
.collapse-toggle-btn {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.collapse-toggle-btn:hover {
    background-color: var(--color-bg-light);
    border-radius: 50%;
}

.collapse-toggle-btn:focus {
    outline: none;
    box-shadow: none;
}

.collapse-toggle-btn:focus-visible {
    outline: none;
}

.toggle-icon {
    color: var(--color-primary);
    transition: transform 0.3s ease;
    flex-shrink: 0;
}

.collapse-toggle-btn[aria-expanded="false"] .toggle-icon {
    transform: rotate(-90deg);
}

.collapse-toggle-btn[aria-expanded="true"] .toggle-icon {
    transform: rotate(0deg);
}

/* Responsive Typography */
@media (max-width: 768px) {
    .toggle-icon {
        width: 20px;
        height: 20px;
    }

    h1 {
        font-size: 2.25rem;
    }

    h2 {
        font-size: 1.75rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h5 {
        font-size: 1.1rem;
    }

    p.lead {
        font-size: 1rem;
    }

    .description-block h2 {
        font-size: 1.5rem;
    }

    .description-block h3 {
        font-size: 1.35rem;
    }

    .description-block p,
    .service-group-description,
    .description-muted {
        font-size: 1rem;
    }
}

/* ===================================
   Container & Layout
   =================================== */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

/* ===================================
   Buttons
   =================================== */
.btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    text-align: center;
    transition: all var(--transition-speed);
    cursor: pointer;
    border: 2px solid transparent;
}

.btn-primary {
    background-color: var(--color-primary);
    color: var(--color-accent);
    border-color: var(--color-primary);
}

.btn-primary:hover {
    background-color: var(--color-hover);
    border-color: var(--color-hover);
    transform: translateY(-2px);
    box-shadow: var(--box-shadow-hover);
}

.btn-secondary {
    background-color: transparent;
    color: var(--color-secondary);
    border-color: var(--color-secondary);
}

.btn-secondary:hover {
    background-color: var(--color-secondary);
    color: var(--color-accent);
}

/* ===================================
   Sections
   =================================== */
section {
    padding: 5rem 0;
}

.section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-secondary);
    position: relative;
}

.section-title::after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background-color: var(--color-primary);
    margin: 1rem auto;
}

/* ===================================
   Features Section
   =================================== */
.features {
    background-color: var(--color-bg-light);
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.feature-card {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: var(--border-radius);
    text-align: center;
    box-shadow: var(--box-shadow);
    transition: transform var(--transition-speed), box-shadow var(--transition-speed);
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--box-shadow-hover);
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.feature-card h3 {
    color: var(--color-secondary);
    margin-bottom: 1rem;
}

.feature-card p {
    color: var(--color-text-light);
    margin-bottom: 0;
}

/* ===================================
   Services Section
   =================================== */
.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.service-card {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: var(--border-radius);
    border: 2px solid var(--color-border);
    transition: all var(--transition-speed);
}

.service-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--box-shadow-hover);
}

.service-card h3 {
    color: var(--color-secondary);
    margin-bottom: 1rem;
}

.service-card p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
}

.link-arrow {
    color: var(--color-primary);
    font-weight: 600;
    transition: transform var(--transition-speed);
    display: inline-block;
}

.link-arrow:hover {
    transform: translateX(5px);
}

/* ===================================
   CTA Section
   =================================== */
.cta {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-hover) 100%);
    color: var(--color-accent);
    text-align: center;
    padding: 5rem 2rem;
}

.cta h2 {
    color: var(--color-accent);
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.cta p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.95;
}

.cta .btn-primary {
    background-color: var(--color-accent);
    color: var(--color-primary);
    border-color: var(--color-accent);
}

.cta .btn-primary:hover {
    background-color: var(--color-secondary);
    color: var(--color-accent);
    border-color: var(--color-secondary);
}

/* ===================================
   Page Header
   =================================== */
.page-header {
    background: linear-gradient(135deg, var(--color-secondary) 0%, #2A2A2A 100%);
    color: var(--color-accent);
    padding: 5rem 2rem 4rem;
    text-align: center;
}

.page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
}

.page-header p {
    font-size: 1.25rem;
    opacity: 0.9;
}

/* ===================================
   Home Page - About Studio
   =================================== */
.about-intro {
    padding: 5rem 0;
    background-color: var(--color-accent);
}

.about-image-large .placeholder-image {
    min-height: 400px;
}

.studio-highlights {
    background-color: var(--color-bg-light);
}

.studio-gallery-preview {
    padding: 5rem 0;
}

.studio-images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.studio-image {
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--box-shadow);
    transition: transform var(--transition-speed);
}

.studio-image:hover {
    transform: translateY(-5px);
    box-shadow: var(--box-shadow-hover);
}

.studio-image .placeholder-image {
    min-height: 250px;
}

.our-approach {
    background-color: var(--color-bg-light);
}

.approach-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
}

.approach-item {
    padding: 2rem;
    background-color: var(--color-accent);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

.approach-item h3 {
    color: var(--color-secondary);
    margin-bottom: 1rem;
    font-size: 1.25rem;
}

.approach-item p {
    color: var(--color-text-light);
    margin-bottom: 0;
    line-height: 1.7;
}


/* ===================================
   Services Page
   =================================== */
.services-detailed {
    padding: 3rem 0;
}

.service-detail {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    align-items: center;
    margin-bottom: 5rem;
    padding: 3rem;
    background-color: var(--color-bg-light);
    border-radius: var(--border-radius);
}

.service-detail.reverse {
    background-color: var(--color-accent);
    box-shadow: var(--box-shadow);
}

.service-detail.reverse .service-detail-content {
    order: 2;
}

.service-detail.reverse .service-detail-image {
    order: 1;
}

.service-price {
    color: var(--color-primary);
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.service-features {
    margin: 1.5rem 0;
    padding-left: 0;
}

.service-features li {
    padding: 0.5rem 0;
    color: var(--color-text-light);
}

.service-detail-image .placeholder-image {
    min-height: 300px;
}

.process {
    background-color: var(--color-bg-light);
}

.process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
}

.process-step {
    text-align: center;
    padding: 2rem;
}

.step-number {
    width: 60px;
    height: 60px;
    background-color: var(--color-primary);
    color: var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    font-weight: bold;
    margin: 0 auto 1rem;
}

.process-step h3 {
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
}

.process-step p {
    color: var(--color-text-light);
    margin-bottom: 0;
}

/* ===================================
   Gallery Page
   =================================== */
.gallery-filters {
    background-color: var(--color-bg-light);
    padding: 2rem 0;
}

.filter-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.75rem 1.5rem;
    background-color: var(--color-accent);
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius);
    cursor: pointer;
    font-weight: 600;
    transition: all var(--transition-speed);
}

.filter-btn:hover,
.filter-btn.active {
    background-color: var(--color-primary);
    color: var(--color-accent);
    border-color: var(--color-primary);
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 3rem 0;
}

.gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    transition: transform var(--transition-speed);
}

.gallery-item:hover {
    transform: scale(1.03);
}

.gallery-item-inner {
    position: relative;
    overflow: hidden;
}

.gallery-item .placeholder-image {
    min-height: 250px;
    border-radius: 0;
    transition: transform var(--transition-speed);
}

.gallery-item .placeholder-image.tall {
    min-height: 350px;
}

.gallery-item:hover .placeholder-image {
    transform: scale(1.1);
}

.gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, transparent 100%);
    color: var(--color-accent);
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform var(--transition-speed);
}

.gallery-item:hover .gallery-overlay {
    transform: translateY(0);
}

.gallery-overlay h3 {
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.gallery-overlay p {
    margin-bottom: 0;
    opacity: 0.9;
}

.testimonials {
    background-color: var(--color-bg-light);
}

.testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.testimonial-card {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

.stars {
    color: var(--color-primary);
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.testimonial-author {
    color: var(--color-text-light);
    font-style: italic;
    margin-top: 1rem;
}

/* ===================================
   Price List Page
   =================================== */
.pricing-intro {
    background-color: var(--color-bg-light);
    padding: 3rem 0;
}

.pricing-notice {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: var(--border-radius);
    border-left: 5px solid var(--color-primary);
    box-shadow: var(--box-shadow);
}

.pricing-notice h3 {
    color: var(--color-secondary);
    margin-bottom: 1rem;
}

.pricing-notice p {
    color: var(--color-text-light);
    margin-bottom: 0;
}

.pricing-tables {
    padding: 3rem 0;
}

.pricing-category {
    margin-bottom: 4rem;
}

.pricing-title {
    color: var(--color-secondary);
    text-align: left;
    margin-bottom: 2rem;
    font-size: 2rem;
    border-bottom: 3px solid var(--color-primary);
    padding-bottom: 0.5rem;
}

.price-table {
    background-color: var(--color-accent);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    overflow: hidden;
}

.price-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    border-bottom: 1px solid var(--color-border);
    transition: background-color var(--transition-speed);
}

.price-row:last-child {
    border-bottom: none;
}

.price-row:hover {
    background-color: var(--color-bg-light);
}

.price-row.highlight {
    background-color: rgba(196, 30, 58, 0.05);
}

.price-row.featured {
    background: linear-gradient(135deg, rgba(196, 30, 58, 0.1) 0%, rgba(196, 30, 58, 0.05) 100%);
    border-left: 4px solid var(--color-primary);
}

.price-service h3 {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.price-service p {
    color: var(--color-text-light);
    margin-bottom: 0;
    font-size: 0.95rem;
}

.price-amount {
    font-size: 1.75rem;
    font-weight: bold;
    color: var(--color-primary);
    white-space: nowrap;
    margin-left: 2rem;
}

.old-price {
    text-decoration: line-through;
    color: var(--color-text-light);
    font-size: 1.25rem;
    margin-right: 0.5rem;
}

.new-price {
    color: var(--color-primary);
}

.pricing-info {
    background-color: var(--color-bg-light);
    padding: 5rem 0;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.info-card {
    background-color: var(--color-accent);
    padding: 2.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

.info-card h3 {
    color: var(--color-secondary);
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.info-card ul {
    list-style: none;
    padding: 0;
}

.info-card ul li {
    padding: 0.5rem 0;
    color: var(--color-text-light);
    border-bottom: 1px solid var(--color-border);
}

.info-card ul li:last-child {
    border-bottom: none;
}

.info-card ul li::before {
    content: "âœ“ ";
    color: var(--color-primary);
    font-weight: bold;
    margin-right: 0.5rem;
}

.pricing-faq {
    padding: 5rem 0;
}

/* ===================================
   Contact Page
   =================================== */
.contact-section {
    padding: 5rem 0;
}

.contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 4rem;
}

.contact-info h2 {
    color: var(--color-secondary);
    margin-bottom: 2rem;
}

.contact-details {
    margin-bottom: 3rem;
}

.contact-item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: flex-start;
}

.contact-icon {
    font-size: 2rem;
    flex-shrink: 0;
}

.contact-item h3 {
    color: var(--color-secondary);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
}

.contact-item p {
    color: var(--color-text-light);
