---
interface Props {
    title: string;
    shortDescription?: string;
    collapseId: string;
    showLink?: boolean;
    linkHref?: string;
}

const { title, shortDescription, collapseId, showLink = false, linkHref } = Astro.props;
---

<div class="collapsible-header mb-4 d-flex justify-content-between align-items-center">
    <div class="flex-grow-1">
        {showLink && linkHref ? (
            <a href={linkHref} class="service-group-link">
                <h2 class="section-title service-group-name mb-2">{title}</h2>
            </a>
        ) : (
            <h2 class="section-title service-group-name mb-2">{title}</h2>
        )}
        {shortDescription && (
            <p class="description-muted mb-0 text-start">{shortDescription}</p>
        )}
    </div>
    <button 
        class="collapse-toggle-btn btn"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target={`#${collapseId}`}
        aria-expanded="true"
        aria-controls={collapseId}
    >
        <span class="toggle-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
            </svg>
        </span>
    </button>
</div>

<style>
    .collapsible-header {
        text-align: center;
    }

    .service-group-link {
        text-decoration: none;
        display: inline-block;
    }

    .service-group-name {
        text-align: center;
        color: var(--color-secondary);
        font-size: 2rem;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .service-group-name::after {
        margin-left: auto;
        margin-right: auto;
    }

    .service-group-link:hover .service-group-name {
        color: var(--color-primary);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .collapsible-header {
            text-align: left;
        }

        .service-group-name {
            font-size: 1.75rem;
            text-align: left;
        }

        .service-group-name::after {
            margin-left: 0;
            margin-right: auto;
        }
    }
</style>
