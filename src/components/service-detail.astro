---
import type { MainService } from '../data/services';
import { formatPrice } from '../utils/utils';
import { IMAGE_BASE_PATH } from '../utils/constants';
import ImageLightbox from './image-lightbox.astro';

interface Props {
    service: MainService;
}

const { service } = Astro.props;
---

<article  id={service.title.toLowerCase().replace(/\s+/g, '-')}>
        <div class="card service-detail-background mb-4 mb-md-5">
            <div class="card-body p-3 p-md-4">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-6">
                        <!-- Header -->
                        <h3 class="service-title mb-2 mb-md-3">{service.title}</h3>
                    </div>
                    <div class="col-12 col-lg-6 text-lg-end">
                        <p class="service-price mb-3 mb-md-4">{formatPrice(service.price)}</p>
                    </div>
                </div>

                <!-- Descriptions -->
                <div class="row justify-content-center">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="service-descriptions mb-3 mb-md-4">
                            {service.description.map((desc) => (
                                <div class="description-block mb-3 mb-md-4">
                                    {desc.title && desc.titleType === 'h2' && (
                                        <h2 class="mb-2 mb-md-3">{desc.title}</h2>
                                    )}
                                    {desc.title && desc.titleType === 'h3' && (
                                        <h3 class="mb-2 mb-md-3">{desc.title}</h3>
                                    )}
                                    {desc.title && desc.titleType === 'h4' && (
                                        <h4 class="mb-2 mb-md-3">{desc.title}</h4>
                                    )}
                                    {desc.title && desc.titleType === 'h5' && (
                                        <h5 class="mb-2 mb-md-3">{desc.title}</h5>
                                    )}
                                    {desc.title && desc.titleType === 'none' && desc.title && (
                                        <h6 class="mb-2 mb-md-3">{desc.title}</h6>
                                    )}
                                    {desc.text && <p class="description-muted">{desc.text}</p>}
                                    {desc.points && (
                                        <ul class="custom-bullet-list">
                                            {desc.points.map((point) => (
                                                <li>{point}</li>
                                            ))}
                                        </ul>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Images with responsive grid -->
                {service.images && service.images.length > 0 && (
                    <div class="row">
                        <div class="col-12">
                            <div class="service-images">
                                <div class="row g-2 g-md-3">
                                    {service.images.map((image, index) => (
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <div class="image-wrapper">
                                                <img 
                                                    src={`${IMAGE_BASE_PATH}${image}`} 
                                                    alt={service.title} 
                                                    class="img-fluid rounded shadow-sm clickable-image" 
                                                    data-index={index}
                                                    data-src={`${IMAGE_BASE_PATH}${image}`}
                                                />
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                )}
            </div>
        </div>
</article>

<ImageLightbox />

<style>
    .custom-bullet-list {
        list-style: none;
        padding-left: 0;
        margin-bottom: 1rem;
    }

    .custom-bullet-list li {
        position: relative;
        padding-left: 1.75rem;
        margin-bottom: 0.75rem;
        color: var(--color-text);
        line-height: 1.6;
    }

    .custom-bullet-list li::before {
        content: "âœ“";
        position: absolute;
        left: 0;
        color: var(--color-primary);
        font-weight: bold;
        font-size: 1.1rem;
    }

    .service-detail-background {
        background-color: var(--color-bg-light);
        border: 0;
    }

    .service-title {
        color: var(--color-secondary);
        font-weight: 700;
        font-size: 1.75rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
        position: relative;
        display: inline-block;
    }

    .service-title::after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background-color: var(--color-primary);
        margin-top: 0.5rem;
    }

    .service-price {
        color: var(--color-primary);
        font-weight: 600;
        font-size: 1.5rem;
    }

    @media (min-width: 992px) {
        .service-price {
            margin-bottom: 0 !important;
        }
    }

    @media (max-width: 768px) {
        .service-title {
            font-size: 1.5rem;
        }

        .service-price {
            font-size: 1.25rem;
        }
    }

    /* Scroll offset for fixed header */
    article {
        scroll-margin-top: 100px;
    }

    /* Clickable images */
    .clickable-image {
        cursor: pointer;
        transition: transform 0.2s ease, opacity 0.2s ease;
    }

    .clickable-image:hover {
        transform: scale(1.05);
        opacity: 0.9;
    }