---
import type { Service } from '../data/services';
import { formatPrice } from '../utils/utils';

interface Props {
    service: Service;
}

const { service } = Astro.props;
---

<article  id={service.title.toLowerCase().replace(/\s+/g, '-')}>
        <div class="card service-detail-background mb-4 mb-md-5">
            <div class="card-body p-3 p-md-4">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-6">
                        <!-- Header -->
                        <h3 class="service-title mb-2 mb-md-3">{service.title}</h3>
                    </div>
                    <div class="col-12 col-lg-6 text-lg-end">
                        <p class="service-price mb-3 mb-md-4">{formatPrice(service.price)}</p>
                    </div>
                </div>

                <!-- Descriptions -->
                <div class="row justify-content-center">
                    <div class="col-lg-12 col-sm-12 col-12">
                        <div class="service-descriptions mb-3 mb-md-4">
                            {service.description.map((desc) => (
                                <div class="description-block mb-3 mb-md-4">
                                    {desc.title && desc.titleType === 'h2' && (
                                        <h2 class="mb-2 mb-md-3">{desc.title}</h2>
                                    )}
                                    {desc.title && desc.titleType === 'h3' && (
                                        <h3 class="mb-2 mb-md-3">{desc.title}</h3>
                                    )}
                                    {desc.title && desc.titleType === 'h4' && (
                                        <h4 class="mb-2 mb-md-3">{desc.title}</h4>
                                    )}
                                    {desc.title && desc.titleType === 'h5' && (
                                        <h5 class="mb-2 mb-md-3">{desc.title}</h5>
                                    )}
                                    <p class="description-muted">{desc.text}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Images with responsive grid -->
                {service.images && service.images.length > 0 && (
                    <div class="row">
                        <div class="col-12">
                            <div class="service-images">
                                <div class="row g-2 g-md-3">
                                    {service.images.map((image) => (
                                        <div class="col-12 col-sm-6 col-lg-4">
                                            <div class="image-wrapper">
                                                <img src={`/images/${image}`} alt={service.title} class="img-fluid rounded shadow-sm" />
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>
                )}
            </div>
        </div>
</article>

<style>
    .service-detail-background {
        background-color: var(--color-bg-light);
        border: 0;
    }

    .service-title {
        color: var(--color-secondary);
        font-weight: 700;
        font-size: 1.75rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
        position: relative;
        display: inline-block;
    }

    .service-title::after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background-color: var(--color-primary);
        margin-top: 0.5rem;
    }

    .service-price {
        color: var(--color-primary);
        font-weight: 600;
        font-size: 1.5rem;
    }

    @media (min-width: 992px) {
        .service-price {
            margin-bottom: 0 !important;
        }
    }

    @media (max-width: 768px) {
        .service-title {
            font-size: 1.5rem;
        }

        .service-price {
            font-size: 1.25rem;
        }
    }
</style>
