---
import type { Service } from '../data/services';
import { formatPrice } from '../utils/utils';

interface Props {
    service: Service;
}

const { service } = Astro.props;
---

<article class="service-detail py-4 py-md-5 mb-4 mb-md-5" id={service.title.toLowerCase().replace(/\s+/g, '-')}>
    <div class="container-fluid px-3 px-md-4">
        <!-- Header with responsive layout -->
        <div class="row mb-3 mb-md-4">
            <div class="col-12">
                <h3 class="service-title fs-3 fs-md-2 mb-2 mb-md-3">{service.title}</h3>
                <p class="service-price fs-4 fs-md-3 mb-1">{formatPrice(service.price)}</p>
            </div>
        </div>

        <!-- Content with responsive layout -->
        <div class="row">
            <div class="col-12">
                <!-- Descriptions -->
                <div class="service-descriptions mb-3 mb-md-4">
                    {service.description.map((desc) => (
                        <div class="description-block mb-3 mb-md-4">
                            {desc.title && desc.titleType === 'h2' && (
                                <h2 class="section-title fs-4 fs-md-3 mb-2 mb-md-3">{desc.title}</h2>
                            )}
                            {desc.title && desc.titleType === 'h3' && (
                                <h3 class="fs-5 fs-md-4 mb-2 mb-md-3">{desc.title}</h3>
                            )}
                            {desc.title && desc.titleType === 'h4' && (
                                <h4 class="fs-6 fs-md-5 mb-2 mb-md-3">{desc.title}</h4>
                            )}
                            {desc.title && desc.titleType === 'h5' && (
                                <h5 class="fs-6 mb-2 mb-md-3">{desc.title}</h5>
                            )}
                            <p class="lead fs-6 fs-md-5">{desc.text}</p>
                        </div>
                    ))}
                </div>

                <!-- Images with responsive grid -->
                {service.images && service.images.length > 0 && (
                    <div class="service-images mt-3 mt-md-4">
                        <div class="row g-2 g-md-3">
                            {service.images.map((image) => (
                                <div class="col-12 col-sm-6 col-lg-4">
                                    <div class="image-wrapper">
                                        <img src={`/images/${image}`} alt={service.title} class="img-fluid rounded shadow-sm" />
                                    </div>
                                </div>
                            ))}
                        </div>
                    </div>
                )}
            </div>
        </div>
    </div>
</article>

<style>
    .service-detail {
        border-bottom: 1px solid var(--color-border);
        max-width: 1200px;
        margin: 0 auto;
        scroll-margin-top: 100px;
    }

    .service-detail:last-child {
        border-bottom: none;
    }

    .service-title {
        color: var(--color-secondary);
        font-weight: 700;
    }

    .service-price {
        color: var(--color-primary);
        font-weight: 600;
    }

    .description-block h2,
    .description-block h3,
    .description-block h4,
    .description-block h5 {
        color: var(--color-secondary);
        font-weight: 600;
    }

    .description-block p {
        color: var(--color-text-dark);
        line-height: 1.8;
    }

    .image-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: var(--border-radius);
        aspect-ratio: 4/3;
        background: linear-gradient(135deg, var(--color-bg-light) 0%, #E0E0E0 100%);
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .image-wrapper:hover img {
        transform: scale(1.05);
    }
</style>
