---
import CollapsibleHeader from './collapsible-header.astro';
import type { ImageGroup } from '../data/gallery';
import { IMAGE_BASE_PATH } from '../utils/constants';

interface Props {
    imageGroup: ImageGroup;
}

const { imageGroup } = Astro.props;
const collapseId = `gallery-${imageGroup.title.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and')}`;
---

<div class="image-group mb-5">
    <CollapsibleHeader 
        title={imageGroup.title}
        collapseId={collapseId}
    />
    
    <div class="collapse show" id={collapseId}>
        <div class="image-grid">
            {imageGroup.images.map((imageSrc) => (
                <div class="image-item">
                    <div class="image-wrapper clickable-image" data-src={`${IMAGE_BASE_PATH}${imageSrc}`}>
                        <img 
                            src={`${IMAGE_BASE_PATH}${imageSrc}`}
                            alt={`${imageGroup.title} gallery image`}
                            class="gallery-image"
                            loading="lazy"
                        />
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>

<style>
    .image-group {
        padding: 2rem 0;
        border-bottom: 1px solid var(--color-border);
    }

    .image-group:last-child {
        border-bottom: none;
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 2rem 0;
    }

    .image-item {
        position: relative;
        overflow: hidden;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        padding-bottom: 100%; /* 1:1 Aspect Ratio */
        overflow: hidden;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform var(--transition-speed), box-shadow var(--transition-speed);
        cursor: pointer;
    }

    .image-wrapper:hover {
        transform: translateY(-4px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .gallery-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--transition-speed);
    }

    .image-wrapper:hover .gallery-image {
        transform: scale(1.05);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .image-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 1rem;
            padding: 1rem 0;
        }
    }

    @media (min-width: 769px) and (max-width: 1024px) {
        .image-grid {
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        }
    }
</style>
