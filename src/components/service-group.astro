---
import type { ServiceGroup } from '../data/services';
import ServiceDetail from './service-detail.astro';
import ServiceGroupDetail from './service-group-detail.astro';
import PriceListTile from './price-list-tile.astro';

interface Props {
    serviceGroup: ServiceGroup;
}

const { serviceGroup } = Astro.props;
---

<section class="service-group">
    <div class="container">
        <!-- Service Group Header and Descriptions -->
        <div class="row justify-content-center mb-5">
            <div class="col-12">
                <ServiceGroupDetail serviceGroup={serviceGroup} />
            </div>
        </div>

        <!-- Individual Services -->
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="services-list">
                    {serviceGroup.services.map((service) => (
                        <ServiceDetail service={service} />
                    ))}
                </div>
            </div>
        </div>

        <!-- Price List -->
        <div class="row justify-content-center">
            <div class="col-12">
                <PriceListTile serviceGroup={serviceGroup} showHeader={true} highlightPrices={false} />
            </div>
        </div>
    </div>
</section>

<style>
    .service-group {
        margin-bottom: 3rem;
    }
</style>
