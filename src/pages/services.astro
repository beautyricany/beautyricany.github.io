---
import PageLayout from '../layouts/page-layout.astro';
import ServiceGroupTile from '../components/service-group-tile.astro';
import CtaSection from '../components/cta-section.astro';
import serviceGroups from '../data/services';

const processSteps = [
    {
        number: 1,
        title: "Consultation",
        description: "We discuss your goals, assess your features, and design the perfect look for you."
    },
    {
        number: 2,
        title: "Design & Approval",
        description: "We create and refine the design until you're completely satisfied."
    },
    {
        number: 3,
        title: "Application",
        description: "Using premium products and techniques, we carefully apply your permanent makeup."
    },
    {
        number: 4,
        title: "Follow-Up",
        description: "Touch-up session to ensure perfect results and answer any questions."
    }
];
---

<PageLayout title="Naše služby" subtitle="Profesionální trvalý make-up a kosmetická ošetření">
    <section class="services-section py-4">
        {serviceGroups.map((group) => (
            <ServiceGroupTile serviceGroup={group} />
        ))}
    </section>

    <CtaSection 
        title="Nejste si jisti, která služba je pro vás ta správná?"
        text="Kontaktujte nás a nechte naše odborníky vést vás k dokonalému ošetření."
        buttonText="Kontaktujte nás"
    />
</PageLayout>

<style>
    /* ===================================
       Services Section
       =================================== */
    .services-section {
        margin-bottom: 3rem;
    }

    /* ===================================
       Process Section
       =================================== */
    .process {
        padding: 4rem 0;
        background: linear-gradient(135deg, var(--color-bg-light) 0%, #FFFFFF 100%);
        margin-bottom: 3rem;
    }

    .section-title {
        text-align: center;
        color: var(--color-secondary);
        font-size: 2.5rem;
        margin-bottom: 3rem;
    }

    .process-steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .process-step {
        text-align: center;
        padding: 2rem;
        background: var(--color-accent);
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        transition: transform 0.3s ease;
    }

    .process-step:hover {
        transform: translateY(-5px);
    }

    .step-number {
        width: 60px;
        height: 60px;
        background: var(--color-primary);
        color: var(--color-accent);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        margin: 0 auto 1.5rem;
    }

    .process-step h3 {
        color: var(--color-secondary);
        margin-bottom: 1rem;
    }

    .process-step p {
        color: var(--color-text-dark);
        line-height: 1.6;
    }

    /* ===================================
       Responsive Design
       =================================== */
    @media (max-width: 768px) {
        .section-title {
            font-size: 2rem;
        }

        .process-steps {
            grid-template-columns: 1fr;
            padding: 0 1rem;
        }

        .btn {
            width: 100%;
        }
    }
</style>
